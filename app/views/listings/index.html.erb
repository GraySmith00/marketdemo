<div class="jumbotron">
  <div class="container">
    <h1>Handcrafted items from <br/>around the world.</h1>
    <h2>Discover one-of-a-kind items</h2>
  </div>
</div>

<div class="container">
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">

        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= link_to "#{listing.name}", listing_path(listing) %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <h5>By <%= listing.user.name %></h5><br/>
            <p><%= listing.description %></p>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>

<br>

<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-primary" %>
<% end %>
  
</div>
